{% extends '::base.html.twig'%}
{%block css%}
    <link href="{{asset('css/customProject.css')}}" rel="stylesheet"/>
    <link href="{{asset('css/lightbox.css')}}" rel="stylesheet" />
    <link href="{{asset('css/jquery.circliful.css')}}" rel="stylesheet" />

{% endblock css%}


{% block items%}
    <ul class="nav navbar-nav">

        <li><a href="{{path('vol_profile_show', { 'email': app.user.email })}}"><span class="glyphicon glyphicon-user"></span> {{app.user.username}}</a></li>
        <li><a href="#"><span class="glyphicon glyphicon-th-large"></span> Timeline</a></li>
        <li><a href="#"><span class="glyphicon glyphicon-cog"></span> Profile Settings</a></li>
        <li><a href="{{path('fos_user_security_logout')}}"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>

    </ul>

{% endblock items %}




{%block container%}

    <div class="row" id="firstRow">

        <div id="crousel" class="col-md-9" style="margin-bottom: 2em;">

            {#---------------------------crousel starts----------------------------------------#}

            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="{{asset('img/test.jpg')}}" alt="">
                        
                    </div>
                    <div class="item">
                        <img src="{{asset('img/test.jpg')}}" alt="">
                        
                    </div>
                    <div class="item">
                        <img src="{{asset('img/test.jpg')}}" alt="">
                        
                    </div>

                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>

        <div class="col-md-3">

            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingOne">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Gallery and Crousel Settings
                            </a>
                        </h4>
                    </div>
                    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                        <div class="panel-body">
                            <a href="#galleryModal" data-toggle="modal"><li> Gallery Settings <span class="glyphicon glyphicon-hand-down"></span></li></a>
                            <a href="#crouselModal" data-toggle="modal"><li> Crousel Settings <span class="glyphicon glyphicon-hand-down"></span></li></a>

                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
    {#----------------------------crousal ends-----------------------------------------#}

    <div class="row">
        <div role="tabpanel">


            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Profile Settings</a></li>
            </ul>


            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="home" style="padding: 1em;" >
                    <div class="col-lg-6">
                        {{form_start(formProject)}}

                        <label class="control-label">Title :</label>
                        {{form_widget(formProject.title,{'attr':{'class':'form-control','placeholder':'Enter Project Title'}})}}
                        <label class="control-label">Type :</label>
                        {{form_widget(formProject.type,{'attr':{'class':'form-control'}})}}
                        <label class="control-label">Description :</label>
                        {{form_widget(formProject.description,{'attr':{'class':'form-control','placeholder':'Enter Project Description'}})}}
                    </div>
                    <div class="col-lg-5 col-lg-offset-1">
                        <label class="control-label">Total Volunteers needed :</label>
                        {{form_widget(formProject.volunteersNeeded,{'attr':{'class':'form-control','placeholder':'How many volunteers needed'}})}}
                        <br /> 
                        <label class="control-label">Project Commence on :</label>
                        {{form_widget(formProject.startDate)}}
                        <label class="control-label">Project Will End :</label>
                        {{form_widget(formProject.endDate)}}
                        <br />
                        <label class="control-label">Expected Skills :</label>
                        {{form_widget(formProject.skill)}}
                    </div>
                    <div>
                        {{form_widget(formProject.create,{'attr':{'class':'btn btn-info pull-right'}})}}
                    </div>
                    {{form_end(formProject)}}
                </div>

            </div>

        </div>
    </div>

    <!-- modal_1 start-->

    <div class="modal fade" id="galleryModal" tabindex="-1" role="dialog" aria-labelledby="galleryModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h3 class="modal-title" id="myModalLabel">Gallery Settings</h3>
                </div>
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>

    <!-- modal_1 ends-->



    <!-- modal_2 start-->

    <div class="modal fade" id="crouselModal" tabindex="-1" role="dialog" aria-labelledby="crouselModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h3 class="modal-title" id="myModalLabel">Crousel Settings</h3>
                </div>
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>

    <!-- modal_2 ends-->





{%endblock container%}


{%block js%}

    <script src="{{asset('js/lightbox.min.js')}}"></script>
    <script src="{{asset('js/jquery.circliful.min.js')}}"></script>

    <script>
        $(document).ready(function () {
            $('#myStat').circliful();
        });
    </script>
{%endblock js%}