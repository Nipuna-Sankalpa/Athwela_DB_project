{%extends "base.html.twig"%}
{% block items%}
    <ul class="nav navbar-nav">
        <li>
            <a href="#">About</a>
        </li>
        <li>
            <a href="#">Services</a>
        </li>
        <li>
            <a href="{{path('fos_user_security_logout')}}">Logout</a>
        </li>
        <li class="dropdown">
            <a href="#" data-toggle="dropdown" class="dropdown-toggle"><span class="glyphicon glyphicon-user"> {{ app.user.username }} <b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li><a href="#">Profile Settings</a></li>
                <li><a href="#">Change Password</a></li>
                <li><a href="{{path('org_profile_show', { 'id': '1' })}}">Profile</a></li>
                <li class="divider"></li>
                <li><a href="#">Logout</a></li>
            </ul>
        </li>
    </ul>
{%endblock items%}

{% block container%}
    <title>{{entity.name}} - <h3>{{entity.description}}</h3></title>
    <div class="row">
        <div class="col-md-3">

            <div id="image">                
                <div style="width: 200px; height: 200px; border: 1px solid black; margin-top: 40px">Profile Picture</div>
            </div>

            <div id="navBox" style="margin-top: 20px;">
                <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                    <div class="panel panel-info">
                        <div class="panel-heading" role="tab" id="headingOne">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    Projects
                                </a>
                            </h4>
                        </div>
                        <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                            <div class="panel-body">
                                <ul>
                                    <li><a href="#">Posted</a></li>
                                    <li><a href="#">Create</a></li>
                                    <li><a href="#">Ongoing</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-info">
                        <div class="panel-heading" role="tab" id="headingTwo">
                            <h4 class="panel-title">
                                <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                                    Setup Profile
                                </a>
                            </h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <form class="form-signin" method="POST" action="#" data-validate="parsley">
                <div class="col-md-8">                    
                    <div class="panel-body">
                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#personalSection">Profile and Contact</a></li>                            
                        </ul>
                        <div class="tab-content">
                            <div id="personalSection" class="tab-pane fade in active">
                                <dl class="dl-horizontal" style="margin-top: 10px">
                                    <dt><span class="glyphicon glyphicon-home" ></span> Address :</dt>
                                    <dd>{{entity.street}}, {{entity.city}}, {{entity.country}}</dd><br/>   
                                    {%for i in 0..((mobile|length)-1)%}
                                        <dt><span class="glyphicon glyphicon-phone"></span> Mobile {{i+1}} :</dt>
                                        <dd>{{mobile[i]}}</dd><br/>
                                    {%endfor%}
                                    {%for i in 0..((email|length)-1)%}
                                        <dt><span class="glyphicon glyphicon-envelope"></span> E-mail {{i+1}} :</dt>
                                        <dd>{{email[i]}}</dd><br/>
                                    {%endfor%}
                                    {%for i in 0..((fax|length)-1)%}                                        
                                        <dt><span class="glyphicon glyphicon-phone-alt"></span> Fax {{i+1}} :</dt>
                                        <dd>{{fax[i]}}</dd><br/>  
                                    {%endfor%}
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{%endblock container%}