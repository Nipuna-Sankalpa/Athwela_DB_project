{% extends "FOSUserBundle::layout.html.twig" %}
{%block css%}
    <link href="{{asset('css/customLogin.css')}}" rel="stylesheet">
{%endblock css%}

{%block logo%}<img alt="Logo"  src="{{asset('img/logo.png')}}" class="img-responsive" style="position: fixed;top: 3px; height: 70px;" >{%endblock logo%}



{% block fos_user_content %}


    <form action="{{ path("fos_user_security_check") }}" class="navbar-form navbar-right" method="post">
        <div class="form-group">
            <input type="hidden" name="_csrf_token" class="form-control" value="{{ csrf_token }}" />

            <label for="username" style="color: #ffffff">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
            <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" required="required" />

            <label for="password" style="color: #ffffff">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
            <input type="password" id="password" class="form-control" name="_password" required="required" />

            <input type="submit" id="_submit" name="_submit" class="btn btn-default form-control" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
        </div>

        <div >
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me" style="color: #ffffff">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
        </div>


    </form>
{% endblock fos_user_content %}

{%block container%}

    <div class="row">
        <div class="col-sm-8" style="margin-top: 1em;">
            {% if error %}
                <div class="signUpForm">
                    <p><strong>Login Fail !!</strong><br />You have an issue with your credentials<br /> please try Again</p>
                </div>
            {% endif %}
        </div>
        <div class="col-sm-4 ">
            <form id="sign_up_form" class="navbar-form navbar-right" method="post" enctype="{{ form_enctype(form) }}" action="{{path('fos_user_registration_register')}}">
                <div class="form-group signUpForm">
                    <h4 style="font-size: 25px">Sign Up</h4>
                    {{ form_row(form._token) }}
                    <div>{{form_errors(form.username,{'attr':{'class':'alert alert-danger'}})}}</div>
                    <div>{{form_widget(form.username,{'attr':{'class':'form-control','placeholder':'Enter User Name'}})}}</div><br />
                    <div>{{form_errors(form.email,{'attr':{'class':'alert alert-danger'}})}}</div>
                    <div>{{form_widget(form.email,{'attr':{'class':'form-control','placeholder':'Enter E-mail'}})}}</div><br />
                    <div>{{form_errors(form.plainPassword.first,{'attr':{'class':'alert alert-danger'}})}}</div>
                    <div>{{form_widget(form.plainPassword.first,{'attr':{'class':'form-control','placeholder':'Enter Password'}})}}</div><br />
                    <div>{{form_widget(form.plainPassword.second,{'attr':{'class':'form-control','placeholder':'Re-Enter Password'}})}}</div><br />
                    <div>{{form_label(form.status)}} :-<br />{{form_widget(form.status,{'attr':{'class':'form-control'}})}}</div>


                    <button type="submit" class="btn btn-info btn-lg btn-block" style="margin-top: 1em;">Sign Up</button>



                </div>

            </form>

        </div>
    </div>

{%endblock container%}

{%block js%}
{%endblock js%}
