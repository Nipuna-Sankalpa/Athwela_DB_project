{% extends 'AthwelaAdministratorBundle:Administrator:adminDashBoard.html.twig'%}
{%block content%}

    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Admins</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">

                <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

                    <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="headingTwo">
                            <h4 class="panel-title">
                                <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    <span class="glyphicon glyphicon-search"></span> Add Admin
                                </a>
                            </h4>
                        </div>
                        <div id="collapseTwo" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingTwo">
                            <div class="panel-body">
                                {%if flag == 'unblocked' %}
                                    <div form-group row>
                                        <form enctype="{{ form_enctype(form) }}" action="{{path('athwela_administrator_register')}}" method="POST">
                                            <div class="header text-center"><h4 >Register Admin</h4></div>

                                            {{ form_row(form._token)}}
                                            <div class="row">
                                                <div>{{form_errors(form.username,{'attr':{'class':'alert alert-danger'}})}}</div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div>{{form_widget(form.username,{'attr':{'class':'form-control','placeholder':'Enter User Name'}})}}</div><br />
                                                    <div>{{form_errors(form.email,{'attr':{'class':'alert alert-danger'}})}}</div>
                                                    <div>{{form_widget(form.email,{'attr':{'class':'form-control','placeholder':'Enter E-mail'}})}}</div><br />
                                                </div>
                                                <div class="col-sm-6">
                                                    <div>{{form_errors(form.plainPassword.first,{'attr':{'class':'alert alert-danger'}})}}</div>
                                                    <div>{{form_widget(form.plainPassword.first,{'attr':{'class':'form-control','placeholder':'Enter Password'}})}}</div><br />
                                                    <div>{{form_widget(form.plainPassword.second,{'attr':{'class':'form-control','placeholder':'Re-Enter Password'}})}}</div>
                                                </div>
                                            </div>
                                            
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    {{form_label(form.roleStatus)}} :-<br />{{form_widget(form.roleStatus,{'attr':{'value':'ROLE_ADMINISTRATOR'}})}}<span> Administrator</span>
                                                </div>
                                            </div>


                                            <button type="submit" class="btn btn-info pull-right" >Add</button>

                                        </form>
                                    </div>

                                {% else %}
                                    {#------------------------------------------------------------------------#}

                                    <div form-group row>
                                        <form action="{{path('athwela_administrator_regMore')}}" method="POST">
                                            <div class="form-group row">
                                                <div class="col-sm-6">
                                                    <label class="control-label"> First Name :</label>
                                                    <input type="text" name="first_name" class="form-control" placeholder="Enter first name">
                                                </div>
                                                <div class="col-sm-6" >
                                                    <label class="control-label"> Last Name :</label>
                                                    <input type="text" name="last_name" class="form-control" placeholder="Enter last name">
                                                </div>                                        
                                            </div>

                                            <div class="form-group row">
                                                <div class="col-sm-4">
                                                    <label class="control-label"> Street :</label>
                                                    <input type="text" name="street" class="form-control" placeholder="Enter street">
                                                </div>
                                                <div class="col-sm-4">
                                                    <label class="control-label"> City :</label>
                                                    <input type="text" name="city" class="form-control" placeholder="Enter city">
                                                </div>
                                                <div class="col-sm-4">
                                                    <label class="control-label"> Country :</label>
                                                    <input type="text" name="country" class="form-control" placeholder="Enter country">
                                                </div>
                                            </div>

                                            <button type="submit" class="btn btn-info pull-right">Add</button>

                                        </form>
                                    </div>

                                    {#------------------------------------------------------------------------#}
                                {% endif %}
                            </div>
                        </div>
                    </div>  
                </div>

            </div>

        </div>
        <!-- /.container-fluid -->
    </div>



{%endblock content%}