{% extends 'AthwelaAdministratorBundle:Default:index.html.twig'%}
{%block customCss%}
    <link href="{{asset('css/dashBoard.css')}}" rel="stylesheet">
    <link href="{{asset('css/lightbox.css')}}" rel="stylesheet" />
    
{%endblock customCss%}

{%block titleAdmin%}<a class="navbar-brand" href="#">Administrator Panel</a>{%endblock titleAdmin%}

{###############################################################################################}

{%block navBar%}
    <ul class="nav navbar-top-links navbar-right">

        <li><a href="#"><i class="fa fa-user fa-fw"></i> {{app.user.username}}</a>
        </li>

        <li><a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
        </li>

        <li><a href="{{path('fos_user_security_logout')}}"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
        </li>

        <!-- /.dropdown-user -->
    </li>
    <!-- /.dropdown -->
</ul>
{% endblock navBar%}



{###############################################################################################}

{%block sideView%}
    <div class="navbar-default sidebar" role="navigation">
        <div class="sidebar-nav navbar-collapse">
            <ul class="nav" id="side-menu">
                <li class="sidebar-search">
                    <div class="row">
                        <div >
                            <div id="logo" style="margin-left: 20%;">
                                
                                {% if proPic==null%}
                                <img src="{{asset('img/logo.png')}}" class="img-responsive">
                                {% else %}
                                <img src="{{asset(proPic)}}" class="img-responsive">
                                {% endif %}
                            </div>
                            <div  style="margin-left: 15%;">
                                <h3 class="logoStrip">Athwela</h3>
                            </div>
                        </div>
                    </div>
                    <!-- /input-group -->
                </li>

                <li>
                    <a href="{{path('athwela_administrator_adminDash',{'regComplete':'blocked'})}}"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
                </li>


                <li>
                    <a href="{{path('athwela_administrator_volunteer')}}"><i class="fa fa-user fa-fw"></i> Volunteers</a>
                    <!-- /.nav-second-level -->
                </li>


                <li>
                    <a href="{{path('athwela_administrator_organization')}}"><i class="fa fa-table fa-fw"></i> Organizations</a>
                </li>

                <li>
                    <a href="{{path('athwela_administrator_project')}}"><i class="fa fa-tasks fa-fw"></i> Projects</a>
                </li>

                <li>
                    <a href="{{path('athwela_administrator_message')}}"><i class="fa fa-envelope fa-fw"></i> Messages</a>
                </li>

                <li>
                    <a href="{{path('athwela_administrator_admin',{'flag':'unblocked'})}}"><i class="fa fa-user fa-fw"></i> Admins</a>
                </li>

                <li>
                    <a href="{{path('athwela_administrator_adminSet')}}"><i class="fa fa-cogs fa-fw"></i> Settings</a>
                </li>

            </ul>
        </div>
        <!-- /.sidebar-collapse -->
    </div>

{%endblock sideView%}


{% block content%}
    <div id="page-wrapper">
        <div class="container-fluid">
            {% if regComplete=='unblocked'%}
                <h3>Registration Completed !!!!</h3>
                {% endif%}
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header">Profile</h3>
                    <div class="row">
                        <div class="col-md-4">
                            <a href="{{asset('img/blankProPic.jpg')}}" data-lightbox="proPic" data-title="My profile picture"><img src="{{asset('img/blankProPic.jpg')}}" class="img-responsive img-thumbnail"></a>
                        </div>
                        <div class="col-md-4">
                            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingOne">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                                You are logged in as {{userName}}
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                        <div class="panel-body">
                                            <div class="row">
                                                <div class="col-md-5">
                                                    <label class="control-label" ><span class="glyphicon glyphicon-user"> </span> Name :</label>
                                                </div>
                                                <div class="col-md-6">
                                                    <p>{{user.firstName}} {{user.lastName}}</p>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-5">
                                                    <label class="control-label" ><span class="glyphicon glyphicon-envelope"> </span> Email :</label>
                                                </div>
                                                <div class="col-md-6">
                                                    <p>{{user.email}}</p>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-5">
                                                    <label class="control-label" ><span class="glyphicon glyphicon-home"> </span> Address :</label>
                                                </div>
                                                <div class="col-md-6">
                                                    <p>{{user.street}}<br />{{user.city}}<br />{{user.country}}</p>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {###########################################################################################################}


                </div>

            </div>



            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header">Notification</h3>
                    {############# 4 panels ###########################}

                    <div class="row">
                        <div class="col-lg-3 col-md-6">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <i class="fa fa-envelope fa-5x"></i>
                                        </div>
                                        {%if messages != 0%}
                                            <div class="col-xs-9 text-right">
                                                <div class="huge">{{messages}}</div>
                                                <div>New Messages!</div>
                                            </div>
                                        {% else %}
                                            <div class="col-xs-9 text-right">
                                                <div class="huge">{{messages}}</div>
                                                <div>No new Messages!</div>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                                <a href="{{path('athwela_administrator_message')}}">
                                    <div class="panel-footer">
                                        <span class="pull-left">View Details</span>
                                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                        <div class="clearfix"></div>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="panel panel-green">
                                <div class="panel-heading">
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <i class="fa fa-tasks fa-5x"></i>
                                        </div>
                                        {% if projects !=0 %}
                                            <div class="col-xs-9 text-right">
                                                <div class="huge">{{projects}}</div>
                                                <div>New Projects!</div>
                                            </div>
                                        {% else%}
                                            <div class="col-xs-9 text-right">
                                                <div class="huge">{{projects}}</div>
                                                <div>No new Projects!</div>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                                <a href="{{path('athwela_administrator_project')}}">
                                    <div class="panel-footer">
                                        <span class="pull-left">View Details</span>
                                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                        <div class="clearfix"></div>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="panel panel-yellow">
                                <div class="panel-heading">
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <i class="fa fa-user fa-5x"></i>
                                        </div>
                                        {%if volunteers != 0%}
                                            <div class="col-xs-9 text-right">
                                                <div class="huge">{{volunteers}}</div>
                                                <div>New Volunteers!</div>
                                            </div>
                                        {%else%}
                                            <div class="col-xs-9 text-right">
                                                <div class="huge">{{volunteers}}</div>
                                                <div>No new Volunteers!</div>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                                <a href="{{path('athwela_administrator_volunteer')}}">
                                    <div class="panel-footer">
                                        <span class="pull-left">View Details</span>
                                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                        <div class="clearfix"></div>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="panel panel-red">
                                <div class="panel-heading">
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <i class="fa fa-table fa-5x"></i>
                                        </div>
                                        {% if organizations !=0 %}
                                            <div class="col-xs-9 text-right">
                                                <div class="huge">{{organizations}}</div>
                                                <div>New Organizations!</div>
                                            </div>
                                        {% else %}
                                            <div class="col-xs-9 text-right">
                                                <div class="huge">{{organizations}}</div>
                                                <div>No new Organizations!</div>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                                <a href="{{path('athwela_administrator_organization')}}">
                                    <div class="panel-footer">
                                        <span class="pull-left">View Details</span>
                                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                        <div class="clearfix"></div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>

                    {###########################################################################################################}


                </div>
                <!-- /.col-lg-12 -->
            </div>

            <!-- /.row -->

        </div>
        <!-- /.container-fluid -->
    </div>
{% endblock content%}
{% block script%}
<script src="{{asset('js/lightbox.min.js')}}"></script>
{%endblock script%}