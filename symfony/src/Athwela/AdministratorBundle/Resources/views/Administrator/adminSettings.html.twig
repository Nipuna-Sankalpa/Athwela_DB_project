{% extends 'AthwelaAdministratorBundle:Administrator:adminDashBoard.html.twig'%}

{%block css%}{%endblock css%}
    
{%block content%}

    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <br>
                    <div class = "jumbotron">
                        <div class="row">
                            <div class = "col-lg-4 col-md-6" id = "img_container">
                                <div class="ih-item circle effect5"><a href="#">
                                        <div class="img"><img src="http://www.phootoscelebrities.com/wp-content/uploads/2015/01/Tom-Cruise-photos.jpg" width = 200 height = 200 alt="img" class="img-responsive"></div>
                                        <div class="info">
                                            <div class="info-back">
                                                <h3>Change Picture</h3>
                                                <p>Click here to upload a new picture as your profile picture</p>
                                            </div>
                                        </div></a>
                                </div>
                            </div>

                            <div class = "col-lg-7 col-md-6">
                                <h2>{{app.user.email}}</h2>
                                <h3>Admin</h3>
                            </div>
                        </div>
                    </div>


                    <div class = "row">
                        <form name="adminForm" role="form">
                            <div class = "col-lg-5 col-sm-offset-1">
                                
                                <fieldset>
                                    <legend>Name :</legend>
                                    <div class="form-group">
                                        <label> First Name:</label>
                                        <label id="fNameLbl"></label>
                                        <input type="default" class="form-control" name="fName" value="{{entity.firstName}}">
                                    </div>

                                    <div class="form-group">
                                        <label> Last Name:</label>
                                        <label id="lNameLbl"></label>
                                        <input type="default" class="form-control" name="lName" value="{{entity.lastName}}">
                                    </div>
                                </fieldset>
                                
                                 <fieldset>
                                    <legend>Contact Info :</legend>
                                    <div class="form-group">
                                        <label> Mobile No :</label>
                                        <label id="mobiLbl"></label>
                                        <input type="default" class="form-control" id="mobi">
                                    </div>
                                </fieldset>
                            </div>
                            

                            <div class = "col-lg-5 col-lg-offset-1 col-sm-offset-1">
                               <fieldset>
                                    <legend>Address :</legend>
                                    <div class="form-group">
                                        <label> Street:</label>
                                        <label id="streetLbl"></label>
                                        <input type="default" class="form-control" name="street" value="{{entity.street}}">
                                    </div>

                                    <div class="form-group">
                                        <label> City :</label>
                                        <label id="cityLbl"></label>
                                        <input type="default" class="form-control" id="city" value="{{entity.city}}">
                                    </div>
                                    
                                    <div class="form-group">
                                        <label>Country:</label>            
                                        <div class="bfh-selectbox bfh-countries" data-name="country" data-country="{{entity.country}}" data-flags="true"></div>
                                    </div>
                                    
                                </div>
                                </fieldset>
                            </div>

                        </form>
                    </div>
                    <div class = "row" >
                        <form name="btnForm" onsubmit="return validateForm()" method="post">
                            <div class ="col-lg-offset-2">
                                <button type="submit" class="btn btn-default">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>

    <script>
        function validateForm() {
            var status = true;
            var fNameVal = document.forms["adminForm"]["fName"].value;
            var lNameVal = document.forms["adminForm"]["lName"].value;
            var streetVal = document.forms["adminForm"]["street"].value;
            var cityVal = document.forms["adminForm"]["city"].value;
            var mobiVal = document.forms["adminForm"]["mobi"].value;
            
            if (!fNameVal.match(/^[a-zA-Z]+$/)) {
                document.getElementById('fNameLbl').innerHTML ='***Invalid Characters!';
                status =  false;
            }
            else{
                document.getElementById('fNameLbl').innerHTML ='';
            }
                
            if (!lNameVal.match(/^[a-zA-Z]+$/) ) {
                document.getElementById('lNameLbl').innerHTML ='***Invalid Characters!';
                status =  false;
            }
            else{
                document.getElementById('lNameLbl').innerHTML ='';
            }
            
            if (!streetVal.match(/^[a-zA-Z]+$/)) {
                document.getElementById('streetLbl').innerHTML ='***Invalid Characters!';
                status =  false;
            }
            else{
                document.getElementById('streetLbl').innerHTML ='';
            }
            
            if (!cityVal.match(/^[a-zA-Z]+$/) ) {
                document.getElementById('cityLbl').innerHTML ='***Invalid Characters!';
                status =  false;
            }
            else{
                document.getElementById('cityLbl').innerHTML ='';
            }
            
            if (!mobiVal.match(/^[0-9]+$/)) {
                document.getElementById('mobiLbl').innerHTML ='***Numerics are required!';
                status =  false;
            }
            else{
                document.getElementById('mobiLbl').innerHTML ='';
            }
            return status;
        }
    </script>

{%endblock content%}